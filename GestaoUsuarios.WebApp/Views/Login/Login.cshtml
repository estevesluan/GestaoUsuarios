@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Login</title>

        <environment include="Development">
            <link href="~/site.min.css" rel="stylesheet" />
            <link href="~/css/style.css" rel="stylesheet" />
            <link href="~/font-awesome.min.css" rel="stylesheet" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        </environment>
        <environment exclude="Development">
            <link href="~/site.min.css" rel="stylesheet" />
            <link href="~/css/style.min.css" rel="stylesheet" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        </environment>
        <script>
            var caminhoBase = "@Url.Content("~/")";
        </script>

    </head>
    <body class="text-center">
        <environment include="Development">
            <script src="~/site.min.js"></script>
            <script src="~/js/funcoes.js"></script>
            <script src="~/js/login.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/site.min.js"></script>
            <script src="~/js/funcoes.min.js"></script>
            <script src="~/js/login.min.js" sp-append-version="true"></script>
        </environment>

        <form class="form-login">
            <img class="mb-4" src="~/images/img-login.png" alt="Imagem de login" width="72" height="72">

            <h1 class="h3 mb-3 font-weight-normal">Acesso ao controle de usuários</h1>

            <label class="sr-only" id="label-cpf"></label>
            <input class="form-control login" placeholder="Cpf" id="input-cpf" />

            <label class="sr-only" id="label-senha"></label>
            <input class="form-control senha" type="password" placeholder="Senha" id="input-senha" />

            <br>

            <button class="btn btn-lg btn-secondary btn-block" type="button" id="btn-login">

                <span class="spinner-grow" role="status" aria-hidden="true" style="display: none;"></span>
                Entrar

            </button>

            <p class="mt-5 mb-3 text-muted">© 2019 - Luan Lourenço Esteves</p>

        </form>

    </body>
</html>
