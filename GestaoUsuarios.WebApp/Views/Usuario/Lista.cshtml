@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<environment include="Development">
    <script src="~/lib/twbs-pagination/jquery.twbsPagination.js"></script>
    <script src="~/js/usuarioLista.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/twbs-pagination/jquery.twbsPagination.min.js"></script>
    <script src="~/js/usuarioLista.min.js" sp-append-version="true"></script>
</environment>

<script>
    atualizarMenu("menu-usuarios");
</script>

<h2>Lista de usuários</h2>

<hr>

<main>

    <div class="input-group mb-3">

        <input type="text" class="form-control" placeholder="Nome do usuário" aria-label="Nome do usuário" aria-describedby="btn-pesquisar-usuario" id="input-pesquisa-usuario">
        <div class="input-group-append">

            <button class="btn btn-outline-secondary" type="button" id="btn-pesquisar-usuario">

                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
                Pesquisar

            </button>

        </div>

    </div>

    <div class="album py-5 bg-light">

        <div class="container">

            <div class="row" id="div-lista-usuarios">

            </div>

        </div>

    </div>

    <ul class="list-unstyled" id="ul-usuarios"></ul>


    <div class="btn-toolbar justify-content-between">

        <ul class="btn-group mr-2" id="ul-paginacao-usuarios"></ul>

        <select class="input-group custom-select " id="select-usuarios-por-pagina">

            <option value="3">3 usuários por página</option>
            <option value="6">6 usuários por página</option>
            <option value="9">9 usuários por página</option>
            <option value="12">12 usuários por página</option>

        </select>

    </div>

</main>

